# SSLCommerz Payment Gateway Configuration
# Get your credentials from: https://developer.sslcommerz.com/registration/

# Store ID (Merchant ID)
SSLCOMMERZ_STORE_ID=your_store_id_here

# Store Password
SSLCOMMERZ_STORE_PASSWD=your_store_password_here

# Sandbox Mode (True for testing, False for production)
SSLCOMMERZ_IS_SANDBOX=True

# Callback URLs (Frontend URLs)
SSLCOMMERZ_SUCCESS_URL=http://localhost:3000/payment/success
SSLCOMMERZ_FAIL_URL=http://localhost:3000/payment/failure
SSLCOMMERZ_CANCEL_URL=http://localhost:3000/payment/cancel
